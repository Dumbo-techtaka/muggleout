# Homebrew 설치 테스트용 최소 환경
FROM ubuntu:22.04

# 필수 패키지만 설치 (Homebrew 요구사항)
RUN apt-get update && apt-get install -y \
    curl \
    git \
    sudo \
    build-essential \
    procps \
    file \
    && rm -rf /var/lib/apt/lists/*

# 테스트 사용자 생성
RUN useradd -m -s /bin/bash testuser && \
    echo "testuser:password" | chpasswd && \
    usermod -aG sudo testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# 작업 디렉토리
WORKDIR /home/testuser

# 테스트 스크립트 복사
COPY --chown=testuser:testuser test-brew-install.sh ./
COPY --chown=testuser:testuser start.sh ./

# 실행 권한
RUN chmod +x *.sh

USER testuser

# 환경 변수
ENV TERM=xterm-256color

# 시작 메시지
RUN echo 'echo "🧪 Homebrew 설치 테스트 환경"' >> ~/.bashrc && \
    echo 'echo "실행: ./test-brew-install.sh"' >> ~/.bashrc && \
    echo 'echo ""' >> ~/.bashrc

CMD ["/bin/bash"]