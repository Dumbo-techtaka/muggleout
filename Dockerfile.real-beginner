# 진짜 초보자 환경 - Node.js도 없는 맨 macOS와 유사한 환경
FROM alpine:3.18

# macOS와 유사한 최소 환경 구성
RUN apk add --no-cache \
    bash \
    curl \
    sudo \
    shadow \
    # macOS 기본 도구들
    python3 \
    ruby \
    perl

# 테스트 사용자 생성
RUN adduser -D -s /bin/bash testuser && \
    echo "testuser:password" | chpasswd && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# 홈 디렉토리 설정
WORKDIR /home/testuser

# 가짜 macOS 명령어
RUN printf '#!/bin/sh\nif [ "$1" = "-productVersion" ]; then\n    echo "13.0"\nelse\n    echo "ProductName:    macOS"\n    echo "ProductVersion: 13.0"\nfi\n' > /usr/local/bin/sw_vers && \
    chmod +x /usr/local/bin/sw_vers

# macOS 스타일 디렉토리 구조
RUN mkdir -p /Applications /Library /System/Library /Users && \
    ln -s /home/testuser /Users/testuser

# 설치 스크립트들 복사
COPY --chown=testuser:testuser start-docker.sh /home/testuser/start.sh
COPY --chown=testuser:testuser install.py /home/testuser/install.py

# 실행 권한 부여
RUN chmod +x /home/testuser/*.sh

# 환경 변수 설정
ENV TEST_PLATFORM=darwin
ENV TERM=xterm-256color

USER testuser

# 초보자를 위한 안내 메시지
RUN echo 'echo "🚀 초보자 테스트 환경입니다!"' >> ~/.bashrc && \
    echo 'echo "📌 다음 명령어를 실행해보세요:"' >> ~/.bashrc && \
    echo 'echo "   ./start.sh  - 자동 설치 및 실행"' >> ~/.bashrc && \
    echo 'echo "   python3 install.py  - Python 설치 도우미"' >> ~/.bashrc && \
    echo 'echo ""' >> ~/.bashrc

CMD ["/bin/bash"]