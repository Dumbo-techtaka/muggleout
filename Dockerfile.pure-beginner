# 완전히 깨끗한 초보자 환경 - macOS와 동일하게 Node.js 없음
FROM alpine:3.18

# macOS 기본 도구만 설치
RUN apk add --no-cache \
    bash \
    curl \
    sudo \
    shadow

# 테스트 사용자 생성
RUN adduser -D -s /bin/bash testuser && \
    echo "testuser:password" | chpasswd && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

WORKDIR /home/testuser

# 가짜 macOS 명령어
RUN printf '#!/bin/sh\nif [ "$1" = "-productVersion" ]; then\n    echo "13.0"\nelse\n    echo "ProductName:    macOS"\n    echo "ProductVersion: 13.0"\nfi\n' > /usr/local/bin/sw_vers && \
    chmod +x /usr/local/bin/sw_vers

# 환경 변수
ENV TEST_PLATFORM=darwin
ENV TERM=xterm-256color

# 설치 스크립트만 복사 (dev-setup 없음!)
COPY --chown=testuser:testuser start.sh /home/testuser/
COPY --chown=testuser:testuser one-line-install.sh /home/testuser/
RUN chmod +x /home/testuser/*.sh

USER testuser

# 초보자 안내
RUN echo 'echo ""' >> ~/.bashrc && \
    echo 'echo "🚀 완전 초보자 환경입니다!"' >> ~/.bashrc && \
    echo 'echo "   Node.js ❌"' >> ~/.bashrc && \
    echo 'echo "   npm ❌"' >> ~/.bashrc && \
    echo 'echo "   dev-setup ❌"' >> ~/.bashrc && \
    echo 'echo ""' >> ~/.bashrc && \
    echo 'echo "📌 다음 명령어로 시작하세요:"' >> ~/.bashrc && \
    echo 'echo "   ./start.sh"' >> ~/.bashrc && \
    echo 'echo ""' >> ~/.bashrc

CMD ["/bin/bash"]